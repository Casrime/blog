{% extends 'base.html.twig' %}

{% block body %}
    <h1>Hello from the admin</h1>

    <div class="col-12">
        {% for article in articles %}
            <h2>
                <a href="{{ path('show_article', {
                    slug: article.slug
                }) }}">
                    {{ article.title }}
                </a>
            </h2>
            <p>{{ article.content }}...</p>
            {{ include('_inc/_articles_actions.html.twig', {
                article: article
            }) }}
            <hr>
        {% endfor %}
    </div>

    <div class="col-12">
        <a href="{{ path('new_article') }}" class="btn btn-primary">Create new article</a>
    </div>

    <br>

    <div class="col-12">
        {% for comment in comments %}
            <p>{{ comment.comment }}</p>
            <hr>
        {% endfor %}
    </div>
{% endblock %}
